{
  "name": "electron-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "concurrently": "^4.1.1",
    "electron": "^5.0.7",
    "electron-builder": "^21.1.1",
    "electron-is-dev": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "wait-on": "^3.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
